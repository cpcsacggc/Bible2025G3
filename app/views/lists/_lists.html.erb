<% if notice.present? %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<h1 class="page-title">Bible Reading for <%= Date.current.year %>G3</h1>

<div class="d-flex justify-content-center mb-3">
  <%= will_paginate @lists %>
</div>

<div class="container">
  <div class="row">
    <%= render partial: 'list_item', collection: @lists, as: :list %>
  </div>
</div>
<div class="d-flex justify-content-center mb-3">
  <%= will_paginate @lists %>
</div>
<div class="text-center mt-3">
  <%= link_to 'New List', new_list_path, class: "btn btn-outline-primary btn-sm" %>
</div>
